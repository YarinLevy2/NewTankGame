<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_page_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adeem.tankgame.MainActivity">

    <Button
        android:id="@+id/signInBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/highScoresBTN"
        android:layout_toStartOf="@+id/highScoresBTN"
        android:text="Sign in" />

    <Button
        android:id="@+id/SignUpBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/highScoresBTN"
        android:layout_toEndOf="@+id/highScoresBTN"
        android:text="Sign up" />

    <Button
        android:id="@+id/startBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="Start game" />

    <Button
        android:id="@+id/highScoresBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/startBTN"
        android:layout_marginBottom="50dp"
        android:text="high scores" />

    <Button
        android:id="@+id/multiBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startBTN"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:text="START MULTIPLAYER GAME" />

    <TextView
        android:id="@+id/txtinhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signInBTN"
        android:layout_alignEnd="@+id/startBTN"
        android:layout_centerVertical="true"
        android:text="New Text"
        android:textColor="#ee0505" />

    <Button
        android:id="@+id/logOffBTN"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtinhere"
        android:layout_below="@+id/signInBTN"
        android:text="log off" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="WELCOME TO TANK GAME"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
